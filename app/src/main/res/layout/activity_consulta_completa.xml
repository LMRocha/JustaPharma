<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context="iesb.justapharma.activity.ConsultaCompletaActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrincipioAtivo"
        android:layout_gravity="center_horizontal"
        android:hint="Principio Ativo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeMedicamento"
        android:layout_gravity="center_horizontal"
        android:hint="Nome do Medicamento" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLaboratório"
        android:layout_gravity="center_horizontal"
        android:hint="Laboratório" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtClasse"
        android:layout_gravity="center_horizontal"
        android:hint="Classe Terapêutica" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="96dp"
        android:id="@+id/btConsultar"
        android:layout_gravity="center"
        android:onClick="consultar"
        android:clickable="true"
        android:background="@drawable/img_lupa_consulta" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btReturn"
        android:layout_gravity="center"
        android:onClick="voltar"
        android:clickable="true"
        android:background="@drawable/img_return" />
</LinearLayout>
