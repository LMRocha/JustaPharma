<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context="iesb.justapharma.activity.Detalhamento">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="777655445544"
        android:gravity="center_horizontal"
        android:id="@+id/txtCodBarras" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bupropiona"
        android:gravity="center_horizontal"
        android:id="@+id/txtPrincipioAtivo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wellbutrin"
        android:gravity="center_horizontal"
        android:id="@+id/txtNomeMed" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgDentroMargem"
        android:background="@drawable/img_refuse"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Você está pagando mais caro, preço acima do permitido pela legislação"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtMensagemPreco" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:id="@+id/bt_cadastrarEstabelecimento"
        android:background="@drawable/img_signup"
        android:layout_gravity="center_horizontal"
        android:onClick="cadastrarEstabelecimento" />

</LinearLayout>
